# RAG Backend Environment Configuration
# Copy this to .env and fill in your values

# Application
APP_NAME="RAG Backend"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=development

# API
API_V1_PREFIX=/v1
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-super-secret-key-change-in-production-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=sqlite+aiosqlite:///./rag_backend.db
DATABASE_ECHO=false

# Redis (for caching and task queue)
REDIS_URL=redis://localhost:6379/0

# LLM Backend (your FastAPI wrapper on port 8080)
LLM_API_BASE_URL=http://localhost:8080
LLM_MODEL_NAME=mistral-7b-instruct
LLM_MAX_TOKENS=1024
LLM_TEMPERATURE=0.1

# Vector Database (FAISS - no external dependencies)
# Phase 2: Weaviate with Docker for production hybrid search
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Graph Database (Neo4j) - optional for Phase 2
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
ENABLE_GRAPH_RAG=false

# Document Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=50

# Retrieval Settings
RETRIEVAL_TOP_K=10
RERANK_TOP_K=5
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=INFO
